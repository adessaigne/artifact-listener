<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
		version="3.0" metadata-complete="true">
	
	<display-name>maven-artifact-notifier-webapp</display-name>
	
	<context-param>
		<param-name>contextClass</param-name>
		<param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
	</context-param>
	
	<context-param>
		<param-name>contextInitializerClasses</param-name>
		<param-value>fr.openwide.core.spring.config.ExtendedApplicationContextInitializer</param-value>
	</context-param>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>fr.openwide.maven.artifact.notifier.web.application.config.spring.MavenArtifactNotifierWebappConfig</param-value>
	</context-param>
	
	<session-config>
		<session-timeout>480</session-timeout>
		<tracking-mode>COOKIE</tracking-mode>
	</session-config>
	
	<listener>
		<!-- branchement de java.util.logging sur slf4j (permet de gÃ©rer les logs de jersey)  -->
		<listener-class>fr.openwide.core.commons.util.logging.SLF4JLoggingListener</listener-class>
	</listener>
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<filter>
		<filter-name>log4jUrlFilter</filter-name>
		<filter-class>fr.openwide.core.wicket.servlet.filter.Log4jUrlFilter</filter-class>
	</filter>
	
	<filter>
		<filter-name>pac4jExceptionFilter</filter-name>
		<filter-class>fr.openwide.maven.artifact.notifier.web.application.auth.pac4j.filter.Pac4jExceptionFilter</filter-class>
	</filter>
	
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	
	<filter>
		<filter-name>openEntityManagerInViewFilter</filter-name>
		<filter-class>org.springframework.orm.jpa.support.OpenEntityManagerInViewFilter</filter-class>
	</filter>
	
	<filter>
		<filter-name>MavenArtifactNotifierApplication</filter-name>
		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
		<init-param>
			<param-name>applicationFactoryClassName</param-name>
			<param-value>org.apache.wicket.spring.SpringWebApplicationFactory</param-value>
		</init-param>
		<init-param>
			<param-name>applicationBean</param-name>
			<param-value>MavenArtifactNotifierApplication</param-value>
		</init-param>
		<init-param>
			<param-name>filterPath</param-name>
			<param-value></param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>log4jUrlFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>openEntityManagerInViewFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>pac4jExceptionFilter</filter-name>
		<url-pattern>/login/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>MavenArtifactNotifierApplication</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
</web-app>